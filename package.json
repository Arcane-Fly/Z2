{
  "name": "z2-workspace",
  "private": true,
  "version": "0.1.0",
  "description": "Z2 AI Workforce Platform - Monorepo Workspace",
  "workspaces": [
    "frontend"
  ],
  "packageManager": "yarn@4.9.2",
  "scripts": {
    "build": "nx run-many -t build --all",
    "build:affected": "nx affected -t build",
    "test": "nx run-many -t test --all",
    "test:affected": "nx affected -t test",
    "dev": "yarn workspaces foreach -pi run dev",
    "lint": "nx run-many -t lint --all",
    "lint:affected": "nx affected -t lint",
    "lint:fix": "nx run-many -t lint:fix --all",
    "type-check": "nx run-many -t type-check --all",
    "type-check:affected": "nx affected -t type-check",
    "format": "nx run-many -t format --all",
    "format:check": "nx run-many -t format:check --all",
    "clean": "yarn workspaces foreach -A run clean",
    "install:all": "yarn install",
    "upgrade:all": "yarn up '*'",
    "constraints": "yarn constraints --fix",
    "graph": "nx graph",
    "reset": "nx reset",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=4.9.2"
  },
  "keywords": [
    "ai",
    "platform",
    "multi-agent",
    "llm",
    "orchestration",
    "mcp",
    "workspace"
  ],
  "license": "MIT",
  "author": "Z2 Team <team@z2.ai>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Arcane-Fly/Z2.git"
  },
  "bugs": {
    "url": "https://github.com/Arcane-Fly/Z2/issues"
  },
  "homepage": "https://github.com/Arcane-Fly/Z2#readme",
  "devDependencies": {
    "husky": "^9.1.7",
    "nx": "21.6.3"
  }
}
