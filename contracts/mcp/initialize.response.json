{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://arcane-fly.github.io/z2/contracts/mcp/initialize.response.json",
  "title": "mcp.initialize.response",
  "description": "MCP protocol initialization response",
  "type": "object",
  "additionalProperties": false,
  "required": ["protocolVersion", "serverInfo", "capabilities", "session_id"],
  "properties": {
    "protocolVersion": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "MCP protocol version in YYYY-MM-DD format",
      "examples": ["2025-03-26"]
    },
    "serverInfo": {
      "type": "object",
      "required": ["name", "version"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Server application name"
        },
        "version": {
          "type": "string",
          "minLength": 1,
          "description": "Server application version"
        }
      },
      "additionalProperties": true
    },
    "capabilities": {
      "type": "object",
      "description": "Server capabilities",
      "properties": {
        "resources": {
          "type": "object",
          "additionalProperties": true,
          "description": "Resource-related capabilities"
        },
        "tools": {
          "type": "object",
          "additionalProperties": true,
          "description": "Tool-related capabilities"
        },
        "prompts": {
          "type": "object",
          "additionalProperties": true,
          "description": "Prompt-related capabilities"
        },
        "sampling": {
          "type": "object",
          "additionalProperties": true,
          "description": "Sampling-related capabilities"
        }
      }
    },
    "session_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique session identifier"
    }
  }
}
