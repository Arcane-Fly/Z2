{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://arcane-fly.github.io/z2/contracts/pinecone/query.request.json",
  "title": "pinecone.query.request",
  "description": "Pinecone vector query operation request",
  "type": "object",
  "additionalProperties": false,
  "required": ["vector"],
  "properties": {
    "namespace": {
      "type": "string",
      "description": "Namespace to query"
    },
    "vector": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 8,
      "description": "Query vector"
    },
    "topK": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10000,
      "default": 10,
      "description": "Number of results to return"
    },
    "filter": {
      "type": "object",
      "additionalProperties": true,
      "description": "Metadata filter"
    },
    "includeMetadata": {
      "type": "boolean",
      "default": true,
      "description": "Include metadata in results"
    },
    "includeValues": {
      "type": "boolean",
      "default": false,
      "description": "Include vector values in results"
    }
  }
}
