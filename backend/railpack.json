{
  "$schema": "https://schema.railpack.com",
  "provider": "python",
  "packages": {
    "python": "3.11"
  },
  "buildAptPackages": ["gcc", "g++"],
  "steps": {
    "install": {
      "commands": ["pip install poetry", "poetry install --no-root"]
    }
  },
  "deploy": {
    "startCommand": "poetry run uvicorn app.main:app --host 0.0.0.0 --port $PORT"
  }
}