{
  "version": "1",
  "metadata": {
    "name": "z2f-frontend"
  },
  "build": {
    "provider": "node",
    "steps": {
      "install": {
        "commands": [
          "npm install -g yarn@1.22.22",
          "yarn install --frozen-lockfile --network-timeout 600000"
        ]
      },
      "build": {
        "commands": ["yarn build"]
      }
    }
  },
  "deploy": {
    "startCommand": "yarn start",
    "healthCheckPath": "/",
    "healthCheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}