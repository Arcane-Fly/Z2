{
  "version": "1",
  "metadata": {
    "name": "z2-frontend"
  },
  "build": {
    "provider": "node",
    "nodeVersion": "22",
    "steps": {
      "install": {
        "commands": [
          "corepack enable",
          "corepack install -g yarn@4.9.2",
          "yarn install --no-immutable"
        ]
      },
      "build": {
        "commands": ["yarn build"]
      }
    }
  },
  "deploy": {
    "startCommand": "node server.js",
    "healthCheckPath": "/health",
    "healthCheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}