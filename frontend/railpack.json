{
  "version": "1",
  "metadata": {
    "name": "z2f-frontend"
  },
  "build": {
    "provider": "node",
    "steps": {
      "install": {
        "commands": [
          "corepack enable",
          "corepack prepare yarn@4.9.2 --activate", 
          "yarn install --immutable --network-timeout 600000"
        ]
      },
      "build": {
        "commands": ["yarn build"]
      }
    }
  },
  "deploy": {
    "startCommand": "yarn start",
    "healthCheckPath": "/health",
    "healthCheckTimeout": 300
  }
}